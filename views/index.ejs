<!DOCTYPE html>
<html>
  	
	<% include ./partials/head %>
	<body>

		<% include ./partials/nav %>
		<div class="container mt-5">
			<div class="row">
				<div class="col-12">	
				    <div class="card w-75 mx-auto my-5 px-5 py-5 border-light" style="box-shadow: 0px 2px 5px .4px rgba(0,0,0,.05), 0px 2px 2px .2px rgba(0,0,0,.1);">
						<form action="/movies" method="post">
							<div class="input-group">
								<input type="text" name="query" id="query" class="form-control p-4" placeholder="Search for movies" required />
								<input type="hidden" name="page" value="0" />
								<div class="input-group-append">
									<button type="submit" class="btn btn-outline-primary">SEARCH</button>
								</div>
							</div>
							<div class="d-flex pt-3 justify-content-center">
								<div class="custom-control custom-radio custom-control-inline">
									<input type="radio" id="title" value="title" name="search" class="custom-control-input" required checked />
									<label class="custom-control-label" for="title">Title</label>
								</div>
								<div class="custom-control custom-radio custom-control-inline">
									<input type="radio" id="country" value="country" name="search" class="custom-control-input" required />
									<label class="custom-control-label" for="country">Country</label>
								</div>
								<div class="custom-control custom-radio custom-control-inline">
									<input type="radio" id="genre" value="genre" name="search" class="custom-control-input" required />
									<label class="custom-control-label" for="genre">Genre</label>
								</div>
								<div class="custom-control custom-radio custom-control-inline">
									<input type="radio" id="cast" value="cast" name="search" class="custom-control-input" required />
									<label class="custom-control-label" for="cast">Cast</label>
								</div>
							</div>
						</form>
				    </div>
				</div>
			</div>
		</div>
  	</body>
</html>
